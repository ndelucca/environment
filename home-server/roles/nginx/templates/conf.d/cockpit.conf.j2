# ========================================
# COCKPIT SUBDOMAIN
# ========================================

# HTTP - Redirect to HTTPS
server {
    listen 80;
    server_name cockpit.{{ nginx_domain }};

    # Redirect all HTTP traffic to HTTPS for Cockpit
    # (Cockpit sets Secure cookies which require HTTPS)
    return 301 https://$server_name$request_uri;
}

# HTTPS
server {
    listen 443 ssl;
    http2 on;
    server_name cockpit.{{ nginx_domain }};

    ssl_certificate {{ nginx_ssl_certificate }};
    ssl_certificate_key {{ nginx_ssl_certificate_key }};

    location / {
        # Cockpit configured to allow unencrypted from localhost
        proxy_pass http://127.0.0.1:{{ nginx_cockpit_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        # WebSocket support for Cockpit
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Preserve ETag
        gzip off;
    }
}
