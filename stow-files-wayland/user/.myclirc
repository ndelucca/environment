# MyClirc Configuration File
# Location: ~/.myclirc (default mycli location)

[main]
# Multi-line mode allows SQL statements across multiple lines
multi_line = True

# Destructive warning alerts before potentially harmful operations
destructive_warning = True

# Smart completion enables context-sensitive auto-completion
smart_completion = True

# Enable syntax highlighting
syntax_highlighting = True

# Show line numbers in the output
line_numbers = False

# Auto-vertical format for wide results
auto_vertical_output = True

# Table format for output (options: ascii, double, fancy_grid, github, grid, html, jira, latex, latex_booktabs, mediawiki, moinmoin, orgtbl, pipe, plain, presto, pretty, psql, rst, simple, textile, tsv, youtrack)
table_format = psql

# Pager settings
pager = less -SRXF

# Enable/disable pager for results
enable_pager = True

# Timing of SQL statements
timing = True

# Log file location
log_file = ~/.mycli.log

# Log level (CRITICAL, ERROR, WARNING, INFO, DEBUG)
log_level = INFO

# Key bindings (emacs or vi)
key_bindings = vi

# Auto-refresh for specific commands
auto_refresh = 0

# Syntax highlighting style
# Options: default, emacs, friendly, colorful, autumn, murphy, manni, monokai, perldoc, pastie, borland, trac, native, fruity, bw, vim, vs, tango, rrt, xcode, igor, paraiso-light, paraiso-dark, lovelace, algol, algol_nu
syntax_style = monokai

# Character set
default_charset = utf8mb4

# Connection timeout
connect_timeout = 10

# Prompt format
prompt = '\t \u@\h:\d> '

# Prompt continuation format
prompt_continuation = '-> '

# Less chatty output
less_chatty = False

# Skip intro on startup
skip_intro = False

# Custom keyword casing
keyword_casing = auto

[colors]
# Color customization for different elements
completion-menu.completion.current = bg:#ffffff #000000
completion-menu.completion = bg:#008888 #ffffff
completion-menu.meta.completion.current = bg:#44aaaa #000000
completion-menu.meta.completion = bg:#448888 #ffffff
completion-menu.multi-column-meta = bg:#aaffff #000000
scrollbar.arrow = bg:#003333
scrollbar = bg:#00aaaa
selected = #ffffff bg:#6666aa
search = #ffffff bg:#4444aa
search.current = #ffffff bg:#44aa44
bottom-toolbar = bg:#222222 #aaaaaa
bottom-toolbar.off = bg:#222222 #888888
bottom-toolbar.on = bg:#222222 #ffffff
search-toolbar = noinherit bold
search-toolbar.text = nobold
system-toolbar = noinherit bold
arg-toolbar = noinherit bold
arg-toolbar.text = nobold
bottom-toolbar.transaction.valid = bg:#222222 #00ff5f bold
bottom-toolbar.transaction.failed = bg:#222222 #ff005f bold

[alias_dsn]
# Database connection aliases
# Example:
# local = mysql://user:password@localhost:3306/database
# dev = mysql://user:password@dev.example.com:3306/database
# staging = mysql://user:password@staging.example.com:3306/database

[favorite_queries]
# Frequently used queries
# Example:
# show_users = SELECT user, host FROM mysql.user
# table_sizes = SELECT table_name, ROUND(((data_length + index_length) / 1024 / 1024), 2) AS 'DB Size in MB' FROM information_schema.tables WHERE table_schema = DATABASE() ORDER BY (data_length + index_length) DESC
