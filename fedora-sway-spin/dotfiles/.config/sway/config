workspace 6 output HDMI-A-1 eDP-1
workspace 7 output eDP-1 HDMI-A-1
workspace 8 output HDMI-A-1 eDP-1
workspace 9 output HDMI-A-1 eDP-1
workspace 10 output HDMI-A-1 eDP-1

assign [app_id="code"]         workspace 3
assign [app_id=".*spotify.*"]  workspace 6

assign [app_id=".*discord.*"]  workspace 8
assign [app_id=".*teams.*"]    workspace 8
assign [app_id=".*whatsapp.*"] workspace 8

assign [app_id="net.thunderbird.Thunderbird"] workspace 10

# Wildcards go after specific apps
assign [app_id=".*chrom.*"]    workspace 2
assign [app_id=".*firefox.*"]  workspace 2
# Modes

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $mode_system (e) Logout | (r) Reboot | (CTRL+s) Shutdown
bindsym $mod+BackSpace mode "$mode_system"
mode "$mode_system" {
    bindsym e      exec --no-startup-id swaymsg exit, mode "default"
    bindsym r      exec --no-startup-id systemctl reboot, mode "default"
    bindsym Ctrl+s exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_settings (a) Audio (n) Notifications
bindsym $mod+exclamdown mode "$mode_settings"
bindsym $mod+questiondown mode "$mode_settings"
bindsym $mod+equal mode "$mode_settings"
mode "$mode_settings" {
    bindsym n exec --no-startup-id swaync-client -t -sw, mode "default"
    bindsym a exec --no-startup-id pavucontrol, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

